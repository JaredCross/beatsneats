extends layout

block content
  main 
    div.container 
      form.main(action='/help' method='post')
        h1 Where are you traveling?
        label(for='city') City
        input(type='text' name='city' id='city' value=(city)?'#{city}':"")
        input(type='submit' value='Help!' )
    div.weather
      if weather
        for day in weather
          p=day[0]
          for time in day[1]
            p=time[0]
            p=time[1][0]
            p=time[1][1]
    div.tileBlock
      if musicEvents
          div.left
            div.musicTile 
            div.musicResponse
              each event in musicEvents
                div.event
                  p 
                    a(href=event.uri) #{event.displayName}
      if restaurants
        div.right
          div.foodTile
          div.foodResponse 
            each biz in restaurants
              div.event
                p
                  a(href=biz.url)= biz.name + " " + biz.rating
