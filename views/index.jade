extends layout

block content
  main 
    .container 
      form(action='/help' method='post')
        h1 Where are you traveling?
        label(for='city') City
        input(type='text' name='city' id='city')
        input(type='submit' value='Help!' )
    div.tileBlock
      div.musicTile 
      div.response
        if musicEvents
          each event in musicEvents
            form(action='/user/list' method='post')
              div.event
                p 
                  a(href=event.uri) #{event.displayName}
                  input(type='hidden' value=event.uri)
                  input(type='hidden' value=event.displayName)
                  input(type='submit' value='Save Event')
      div.foodTile
    .weather
      if weather
        for day in weather
          p=day[0]
          for time in day[1]
            p=time[0]
            p=time[1][0]
            p=time[1][1]
        
